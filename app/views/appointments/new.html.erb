<h1>Add Appointments</h1>
<%= form_with(model: [@user, @appointment], local: true, class: "ui form" ) do |f| %>
  <%= f.label :doctor %>
  <%= f.select :doctor_id, @doctors.collect { |u| [u.name, u.id] } %>
  <br />
  <%= f.label :appointment_date%>
  <%= f.text_field :appointment_date %>
  <br />
  <%= f.label :appointment_comment %>
  <%= f.text_field :appointment_comment %>
  <br />
  <%= f.submit nil, class: "ui green button inverted" %>
  <br />
<% end %>